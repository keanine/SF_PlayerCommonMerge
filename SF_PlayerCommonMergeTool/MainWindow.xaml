<Window x:Class="SF_PlayerCommonMergeTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SF_PlayerCommonMergeTool"
        mc:Ignorable="d"
        Title="PlayerCommon Merge Tool v1.4" Height="410" Width="540" ResizeMode="CanResize" MinWidth="540" MaxWidth="540" MinHeight="150">
    <Grid>
        <TextBox x:Name="GameFolderTextbox" Margin="10,10,92,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" IsReadOnly="True"/>
        <Button x:Name="MergeButton" Content="Merge" Margin="10,0,10,10" Click="MergeButton_Click" Height="20" VerticalAlignment="Bottom"/>
        <ScrollViewer Margin="10,51,10,35" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="CategoryStackPanel"/>
        </ScrollViewer>
        <Button x:Name="BrowseButton" Content="Browse" Margin="0,9,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="77" Click="BrowseButton_Click"/>

    </Grid>
</Window>
